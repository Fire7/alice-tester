{
  "name": "alice-tester",
  "version": "0.1.3",
  "description": "A module for testing Yandex Alice skills",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/alice-tester.git"
  },
  "scripts": {
    "code": "eslint src test",
    "test": "mocha test/setup.js test/specs/*.js",
    "test:cov": "nyc --reporter=html --check-coverage --lines 100 npm t && nyc report",
    "open:cov": "open coverage/index.html",
    "ci": "run-s code test:cov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "toc": "markdown-toc README.md -i",
    "prerelease": "run-s code test:cov",
    "postrelease": "git push --follow-tags --no-verify",
    "release": "npm version $VER && npm publish --access public",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:cov",
      "pre-push": "run-s code test:cov"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": "eslint"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lodash.merge": "^4.6.1",
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.6.0",
    "eslint-plugin-mocha": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "markdown-toc": "^1.2.0",
    "mocha": "^6.0.1",
    "nock": "^10.0.6",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0"
  },
  "license": "MIT"
}
